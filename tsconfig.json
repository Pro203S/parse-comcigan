{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "ESNext",
    "lib": [
      "ES6",
      "DOM"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}